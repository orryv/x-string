{
    "name": "orryv/x-string",
    "description": "Immutable, fluent string manipulation toolkit for PHP.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "paragonie/sodium_compat": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Orryv\\": "src/",
            "Orryv\\XArray\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orryv\\XArray\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "suggest": {
        "ext-intl": "Enables Normalizer support for Unicode normalization.",
        "ext-mbstring": "Improves multibyte string handling performance.",
        "ext-iconv": "Used as a fallback for character encoding conversions.",
        "ext-openssl": "Required for AES-256-GCM encryption/decryption support."
    },
    "scripts": {
        "test": [
            "@php tests/ComposeDocTests.php",
            "@php vendor/bin/phpunit"
        ],
        "test:unit": "@php vendor/bin/phpunit --testsuite=unit",
        "test:integration": "@php vendor/bin/phpunit --testsuite=integration",
        "test:docs": "@php vendor/bin/phpunit --testsuite=docs",
        "test:coverage": "@php vendor/bin/phpunit --coverage-text",
        "compose-docs-tests": "@php tests/ComposeDocTests.php"
    },
    "config": {
        "sort-packages": true
    }
}
